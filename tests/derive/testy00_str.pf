module testy00_str

   use MPI
   use pFunit
   use iso_c_binding
   use x3d_unit_testing_tools
   implicit none

contains

   ! Serial test
   @test
   subroutine verif_dery_deryy_00_str()

      use decomp_2d
      use param
      use var
      use variables
      use tools, only : error_l1_l2_linf
      use ibm_param, only : ubcx,ubcy,ubcz

      implicit none

      real(mytype), dimension(ysize(1),ysize(2),ysize(3)) :: input, output, tmp, sol
      real(mytype) :: y, l1, l2, linf, sl1, sl2, slinf, t1, t2
      integer :: j

      ! Lx = Ly = Lz = 2
      do j = 1, ysize(2)
         y = yp(j)
         input(:,j,:) = sin(pi*y) + cos(5*pi*y)
         sol(:,j,:) = pi*cos(pi*y) - 5*pi*sin(5*pi*y)
      enddo
      call error_l1_l2_linf(sol, sl1, sl2, slinf, ysize(1), ysize(2), ysize(3), xsize(1)*ysize(2)*zsize(3))
      call cpu_time(t1)
      call dery(output,input,di2,sy,ffy,fsy,fwy,ppy,ysize(1),ysize(2),ysize(3),0,ubcx)
      call cpu_time(t2)
      call error_l1_l2_linf(output-sol, l1, l2, linf, ysize(1), ysize(2), ysize(3), xsize(1)*ysize(2)*zsize(3))
      call log("dery00_str", l1/sl1, l2/sl2, linf/slinf, t2-t1)
      if (check_error) then
         @assertEqual(l1/sl1, 0.d0, tolerance=4.d-11)
         @assertEqual(l2/sl2, 0.d0, tolerance=9.d-11)
         @assertEqual(linf/slinf, 0.d0, tolerance=3.d-10)
      endif
      call cpu_time(t1)
      call dery(output,input,di2,sy,ffyp,fsyp,fwyp,ppy,ysize(1),ysize(2),ysize(3),1,ubcy)
      call cpu_time(t2)
      call error_l1_l2_linf(output-sol, l1, l2, linf, ysize(1), ysize(2), ysize(3), xsize(1)*ysize(2)*zsize(3))
      call log("dery00p_str", l1/sl1, l2/sl2, linf/slinf, t2-t1)
      if (check_error) then
         @assertEqual(l1/sl1, 0.d0, tolerance=4.d-11)
         @assertEqual(l2/sl2, 0.d0, tolerance=9.d-11)
         @assertEqual(linf/slinf, 0.d0, tolerance=3.d-10)
      endif

      ! test deryy
      iimplicit = -iimplicit
      do j = 1, ysize(2)
         y = yp(j)
         sol(:,j,:) = -(pi**2)*sin(pi*y) - 25*(pi**2)*cos(5*pi*y)
      enddo
      call error_l1_l2_linf(sol, sl1, sl2, slinf, ysize(1), ysize(2), ysize(3), xsize(1)*ysize(2)*zsize(3))
      call cpu_time(t1)
      call deryy(output,input,di2,sy,sfyp,ssyp,swyp,ysize(1),ysize(2),ysize(3),1,ubcx)
      if (istret /= 0) then
         call dery(tmp,input,di2,sy,ffyp,fsyp,fwyp,ppy,ysize(1),ysize(2),ysize(3),1,ubcx)
         do j = 1, ysize(2)
            output(:,j,:) = output(:,j,:)*pp2y(j)-pp4y(j)*tmp(:,j,:)
         enddo
      endif
      call cpu_time(t2)
      call error_l1_l2_linf(output-sol, l1, l2, linf, ysize(1), ysize(2), ysize(3), xsize(1)*ysize(2)*zsize(3))
      call log("deryy00p_str", l1/sl1, l2/sl2, linf/slinf, t2-t1)
      if (check_error) then
         @assertEqual(l1/sl1, 0.d0, tolerance=7.d-11)
         @assertEqual(l2/sl2, 0.d0, tolerance=1.d-10)
         @assertEqual(linf/slinf, 0.d0, tolerance=3.d-10)
      endif
      call cpu_time(t1)
      call deryy(output,input,di2,sy,sfy,ssy,swy,ysize(1),ysize(2),ysize(3),0,ubcy)
      if (istret /= 0) then
         call dery(tmp,input,di2,sy,ffy,fsy,fwy,ppy,ysize(1),ysize(2),ysize(3),0,ubcy)
         do j = 1, ysize(2)
            output(:,j,:) = output(:,j,:)*pp2y(j)-pp4y(j)*tmp(:,j,:)
         enddo
      endif
      call cpu_time(t2)
      call error_l1_l2_linf(output-sol, l1, l2, linf, ysize(1), ysize(2), ysize(3), xsize(1)*ysize(2)*zsize(3))
      call log("deryy00_str", l1/sl1, l2/sl2, linf/slinf, t2-t1)
      if (check_error) then
         @assertEqual(l1/sl1, 0.d0, tolerance=7.d-11)
         @assertEqual(l2/sl2, 0.d0, tolerance=1.d-10)
         @assertEqual(linf/slinf, 0.d0, tolerance=3.d-10)
      endif
      iimplicit = -iimplicit

   end subroutine verif_dery_deryy_00_str

